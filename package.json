{
  "name": "cle-du-memoire-backend",
  "version": "1.0.0",
  "description": "Clé du Mémoire - Backend API",
  "private": true,
  "scripts": {
    "build": "prisma generate && tsc && mkdir -p public && echo 'API is running' > public/index.html",
    "postinstall": "prisma generate",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.22.0",
    "pdfkit": "^0.17.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "@types/pdfkit": "^0.17.5",
    "@types/uuid": "^9.0.7",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}